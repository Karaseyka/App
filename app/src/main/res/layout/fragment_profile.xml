<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/person"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"/>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="40sp"
            android:layout_gravity="center"
            android:id="@+id/imageLayout"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="100dp"
            app:layout_constraintVertical_chainStyle="packed">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:background="@color/grey_light"
                android:src="@drawable/baseline_photo_camera_24"/>

        </androidx.cardview.widget.CardView>



        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:id="@+id/nickname"
            android:text="kjmfdiods"
            android:background="@drawable/style2"
            android:textSize="25sp"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/style2"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:textSize="10sp"
            android:id="@+id/surname"
            android:text="kjmfdiods sjhkksbe"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="35sp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="25sp"
                android:text="Куда мне могут писать:"
                android:textSize="12sp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15sp"
                android:id="@+id/contacty"
                android:text="t.me/glortest"
                android:textSize="12sp"
                android:background="@drawable/style2"/>

        </LinearLayout>
        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="148sp"
            android:layout_marginTop="40sp"
            android:backgroundTint="#E38901"
            android:text="Cохранить"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>